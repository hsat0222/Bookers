  <% if @book.errors.any? %>
         <%= @book.errors.count %>
           <% @book.errors.full_messages.each do |message| %>
            <%= message %>
           <% end %>
        <% end %>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th> <th>Body</th> <th></th>
  </tr>

  <% @books.each do |book| %>
  <tr>
  	<td><%= book.title %></td>
  	<td><%= book.body %></td>
  	<td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destoroy", book_path(book), method: :delete, "data-confirm" => "Are you sure？" %></td>
  </tr>
  <% end %>
</table>

<h2>New book</h2>

	<p id="notice">
    	<%=  notice %> <!-- #サクセスメッセージの表示 -->
	</p>

<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %>

<% end %>